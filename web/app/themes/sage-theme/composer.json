{
  "name": "roots/sage",
  "type": "wordpress-theme",
  "description": "WordPress starter theme with Laravel Blade components and templates, Webpack, and Sass",
  "homepage": "https://roots.io/sage/",
  "license": "MIT",
  "keywords": [
    "wordpress"
  ],
  "require": {
    "php": ">=8.1",
    "illuminate/view": "^10.0",
    "roots/acorn": "^4.0",
    "log1x/sage-directives": "^2.0",
    "log1x/sage-svg": "^1.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7.1"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "scripts": {
    "lint": "phpcs --standard=PSR12 --extensions=php app/"
  }
}